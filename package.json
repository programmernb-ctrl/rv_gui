{
    "name": "rv_gui",
    "author": "thirst",
    "version": "0.0.2",
    "license": "MIT",
    "description": "",
    "type": "module",
    "scripts": {
        "build": "node build.mjs",
        "build:web": "cd gui && bun run build:web",
        "build:dev": "bun run build && bun run build:web",
        "watch": "node build.mjs --watch",
        "watch:web": "cd gui && bun run watch",
        "dev": "concurrently \"bun run watch\" \"bun run watch:web\""
    },
    "keywords": [
        "fivem"
    ],
    "devDependencies": {
        "@citizenfx/client": "latest",
        "@citizenfx/server": "latest",
        "@types/node": "^24.9.2",
        "concurrently": "^9.1.2",
        "esbuild": "0.25.4",
        "fast-glob": "3.3.3",
        "prettier": "^3.5.3",
        "typescript": "^5.8.3"
    },
    "dependencies": {
        "@communityox/ox_lib": "3.31.3",
        "@nativewrappers/fivem": "latest",
        "@nativewrappers/server": "latest"
    },
    "prettier": {
        "printWidth": 120,
        "trailingComma": "all",
        "arrowParens": "always",
        "endOfLine": "crlf",
        "singleQuote": true,
        "tabWidth": 4,
        "useTabs": false,
        "bracketSpacing": false,
        "bracketSameLine": true
    },
    "engines": {
        "node": ">=22.1.0"
    }
}

